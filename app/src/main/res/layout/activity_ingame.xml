<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/textView_timer"
        android:layout_width="98dp"
        android:layout_height="wrap_content"
        android:text="Your turn: 00:00"
        tools:layout_editor_absoluteX="29dp"
        tools:layout_editor_absoluteY="550dp" />


    <TextView
        android:id="@+id/textView_coins"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your coins: X"
        tools:layout_editor_absoluteX="281dp"
        tools:layout_editor_absoluteY="573dp" />


    <TextView
        android:id="@+id/textView_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User did SOMETHING."
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        tools:layout_editor_absoluteX="39dp"
        tools:layout_editor_absoluteY="499dp" />

    <TextView
        android:id="@+id/textView_player_NAME"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Player Name"
        tools:layout_editor_absoluteX="291dp"
        tools:layout_editor_absoluteY="546dp" />

    <Button
        android:id="@+id/btnOK"
        android:layout_width="49dp"
        android:layout_height="39dp"
        android:text="OK"
        tools:layout_editor_absoluteX="163dp"
        tools:layout_editor_absoluteY="555dp" />

    <LinearLayout
        android:id="@+id/container_enemies"
        android:layout_width="409dp"
        android:layout_height="121dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/container_enemy1"
            android:layout_width="132dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            tools:visibility="visible">

            <ImageView
                android:id="@+id/imageView_enemy_one"
                android:layout_width="63dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/userbeta" />

            <LinearLayout
                android:id="@+id/container_enemy1_info"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView_enemy_one_influence"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0"
                    android:text="2" />

                <TextView
                    android:id="@+id/textView_name_enemy_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="User" />

                <TextView
                    android:id="@+id/textView1_enemy_one_coins_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Coins:" />

                <TextView
                    android:id="@+id/textView_enemy_one_coins"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="X" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/container_enemy2"
            android:layout_width="138dp"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView_enemy_two"
                android:layout_width="63dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/userbeta" />

            <LinearLayout
                android:id="@+id/container_enemy2_info"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView_enemy_two_influence"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2" />

                <TextView
                    android:id="@+id/textView_name_enemy_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="User" />

                <TextView
                    android:id="@+id/textView1_enemy_two_coins_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Coins:" />

                <TextView
                    android:id="@+id/textView_enemy_two_coins"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="X" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/container_enemy3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView_enemy_three"
                android:layout_width="63dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/userbeta" />

            <LinearLayout
                android:id="@+id/container_enemy3_info"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView_enemy_three_influence"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2" />

                <TextView
                    android:id="@+id/textView_name_enemy_three"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="User" />

                <TextView
                    android:id="@+id/textView1_enemy_three_coins_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Coins:" />

                <TextView
                    android:id="@+id/textView_enemy_three_coins"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="X" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/textView_timer_enemy_three"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:00"
        tools:layout_editor_absoluteX="279dp"
        tools:layout_editor_absoluteY="134dp" />

    <LinearLayout
        android:id="@+id/container_actions"
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="7dp"
        android:dividerPadding="0"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/button_assassinate"
            android:layout_width="49dp"
            android:layout_height="44dp"
            android:text="A" />

        <Button
            android:id="@+id/button_tax"
            android:layout_width="49dp"
            android:layout_height="44dp"
            android:text="T" />

        <Button
            android:id="@+id/button_steal"
            android:layout_width="49dp"
            android:layout_height="44dp"
            android:text="S" />

        <Button
            android:id="@+id/button_exchange"
            android:layout_width="49dp"
            android:layout_height="44dp"
            android:text="E" />

        <Button
            android:id="@+id/button_income"
            android:layout_width="49dp"
            android:layout_height="44dp"
            android:text="I" />

        <Button
            android:id="@+id/button_foreign_aid"
            android:layout_width="49dp"
            android:layout_height="44dp"
            android:layout_marginBottom="0"
            android:text="FA" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/container_special_actions"
        android:layout_width="348dp"
        android:layout_height="51dp"
        android:layout_marginStart="29dp"
        android:layout_marginEnd="34dp"
        android:layout_marginBottom="7dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/container_actions"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/button_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next"
            android:visibility="visible" />

        <Button
            android:id="@+id/button_challenge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Challenge" />

        <Button
            android:id="@+id/button_coup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Coup" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/container_cards"
        android:layout_width="411dp"
        android:layout_height="227dp"
        android:layout_marginStart="1dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/card_playercard4"
            android:layout_width="77dp"
            android:layout_height="77dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="10dp"

            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/ambassador"
            android:visibility="invisible" />

        <LinearLayout
            android:id="@+id/container_card1"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/card_playercard1"
                android:layout_width="119dp"
                android:layout_height="169dp"
                android:layout_gravity="center"
                android:src="@drawable/contessa" />

            <TextView
                android:id="@+id/text_playercard1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="CardName"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/container_card2"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/card_playercard2"
                android:layout_width="119dp"
                android:layout_height="169dp"
                android:layout_gravity="center_horizontal|center_vertical"

                android:layout_margin="0"
                android:src="@drawable/ambassador" />

            <TextView
                android:id="@+id/text_playercard2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="CardName"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />
        </LinearLayout>

        <ImageView
            android:id="@+id/card_playercard3"
            android:layout_width="77dp"
            android:layout_height="77dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="10dp"

            android:layout_marginLeft="10dp"
            android:layout_marginEnd="0dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/ambassador"
            android:visibility="invisible" />
    </LinearLayout>


</android.support.constraint.ConstraintLayout>